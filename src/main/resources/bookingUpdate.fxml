<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" prefHeight="305.0" prefWidth="446.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.BookingController">
    <HBox alignment="center">
        <Label text="Booking ID:"/>
        <Spinner fx:id="spnId" editable="true" initialValue="0" max="2000000000" min="0"/>
    </HBox>
    <Pane prefHeight="12.0" prefWidth="446.0"/>
    <HBox alignment="center">
        <Label text="Movie ID:"/>
        <Spinner fx:id="spnIdMovie" editable="true" initialValue="0" max="2000000000" min="0"/>
    </HBox>
    <Pane prefHeight="10.0" prefWidth="446.0"/>

    <HBox alignment="center">
        <Label text="Card ID:"/>
        <Spinner fx:id="spnIdCard" editable="true" initialValue="0" max="2000000000" min="0"/>
    </HBox>
    <Pane prefHeight="18.0" prefWidth="446.0"/>
    <Label text="Date:"/>
    <HBox alignment="center">
        <TextField fx:id="txtBookingDay" promptText="Day"/>
        <TextField fx:id="txtBookingMonth" promptText="Month"/>
        <TextField fx:id="txtBookingYear" promptText="Year"/>
    </HBox>
    <Label text="Time:"/>
    <HBox alignment="center">
        <TextField fx:id="txtBookingHour" promptText="Hour"/>
        <TextField fx:id="txtBookingMinutes" promptText="Minutes"/>
    </HBox>
    <Pane prefHeight="16.0" prefWidth="446.0"/>
    <Button fx:id="btnUpdate" onAction="#btnUpdateClick" text="Update"/>
    <Button fx:id="btnCancel" onAction="#btnCancelClick" text="Cancel"/>
</VBox>
